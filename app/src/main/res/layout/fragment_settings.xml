<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="?android:windowBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nickNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="?attr/titleTextColor"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나이 : "
                    android:textStyle="bold"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="16sp"
                    android:layout_margin="15dp">

                </TextView>
                <TextView
                    android:id="@+id/ballsizeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="볼사이즈 :      "
                    android:textStyle="bold"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="16sp"
                    android:layout_margin="15dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/gradeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="등급 : "
                    android:textStyle="bold"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="16sp"
                    android:layout_margin="15dp">

                </TextView>
                <TextView
                    android:id="@+id/avgText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="평균 정확도 : "
                    android:textStyle="bold"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="16sp"
                    android:layout_margin="15dp">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="2dp"
            android:text="내 정보 관리"
            android:textColor="#A3A0A0"
            android:background="?attr/colorSurface">

        </TextView>

        <Button
            android:id="@+id/myNickName_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="닉네임 변경"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:insetTop="0dp"
            android:insetBottom="3dp"
            app:cornerRadius="0dp"
            android:textColor="?attr/titleTextColor"
            android:backgroundTint="?attr/colorSurface"
            android:drawableRight="@drawable/drawable_right_image_menu"
            android:drawableTint="#979797"/>
        <Button
            android:id="@+id/myAge_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="나이 변경"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:insetTop="0dp"
            android:insetBottom="3dp"
            app:cornerRadius="0dp"
            android:textColor="?attr/titleTextColor"
            android:backgroundTint="?attr/colorSurface"
            android:drawableRight="@drawable/drawable_right_image_menu"
            android:drawableTint="#979797"/>
        <Button
            android:id="@+id/myBallSize_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="볼사이즈 변경"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:insetTop="0dp"
            android:insetBottom="3dp"
            app:cornerRadius="0dp"
            android:textColor="?attr/titleTextColor"
            android:backgroundTint="?attr/colorSurface"
            android:drawableRight="@drawable/drawable_right_image_menu"
            android:drawableTint="#979797"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:text="앱 설정"
            android:textColor="#A3A0A0"
            android:background="?attr/colorSurface">

        </TextView>
        <Button
            android:id="@+id/myMode_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="모드 변경"
            android:textSize="18sp"
            android:insetTop="0dp"
            android:insetBottom="3dp"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            app:cornerRadius="0dp"
            android:textColor="?attr/titleTextColor"
            android:backgroundTint="?attr/colorSurface"
            android:drawableRight="@drawable/drawable_right_image_menu"
            android:drawableTint="#979797"/>
        <Button
            android:id="@+id/myLogOut_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="로그아웃"
            android:textSize="18sp"
            android:insetTop="0dp"
            android:insetBottom="3dp"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            app:cornerRadius="0dp"
            android:textColor="?attr/titleTextColor"
            android:backgroundTint="?attr/colorSurface"
            android:drawableRight="@drawable/drawable_right_image_menu"
            android:drawableTint="#979797"/>

    </LinearLayout>
</LinearLayout>
